@model TradeSampleProjectWithCore.Models.Login
@{
    Layout = "_Layout";
    ViewData["Title"] = "Giriş";
}


<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4>Giriş</h4>
                <hr />
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control input-lg" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control input-lg" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-danger" style="font-weight:bold; padding-bottom:4px;padding-top:4px;">
                    @ViewData["Message"]
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Giriş</button>
                </div>
            </form>
        </section>
    </div>
</div>