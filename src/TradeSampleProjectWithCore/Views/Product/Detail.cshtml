@model TradeSampleProjectWithCore.Models.ViewModelProduct
@{
    Layout = "_Template";
    ViewData["Title"] = "Ürün Detayı";
}

<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <section>
            <form asp-controller="Product" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control input-lg" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="UnitPrice"></label>
                    <input asp-for="UnitPrice" class="form-control input-lg" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="ProductCategory.Name"></label>
                    <input asp-for="ProductCategory.Name" class="form-control input-lg" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="StockCode"></label>
                    <input asp-for="StockCode" class="form-control input-lg" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="StockNumber"></label>
                    <input asp-for="StockNumber" class="form-control input-lg" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control input-lg" readonly="readonly" />
                </div>
                <div class="form-group">
                    @if (@Model.StockNumber > 0)
                    {
                        <button type="submit" asp-action="AddCart" asp-route-productId="@Model.ProductId" class="btn btn-success btn-lg col-lg-5 col-md-5 col-sm-5 col-xs-5">Sepete Ekle</button>
                    }

                    <button type="submit" asp-action="Cancel" class="btn btn-warning btn-lg col-lg-5 col-lg-offset-2 col-md-5 col-md-offset-2 col-sm-5 col-sm-offset-2 col-xs-5 col-xs-offset-2">İptal</button>
                </div>
            </form>
        </section>
    </div>
</div>