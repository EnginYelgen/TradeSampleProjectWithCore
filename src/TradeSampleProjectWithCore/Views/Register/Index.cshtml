@model TradeSampleProjectWithCore.Models.Register
@{
    Layout = "_Layout";
    ViewData["Title"] = "Kayıt";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <section>
            <form asp-controller="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4>Yeni Kayıt</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control input-lg" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control input-lg" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control input-lg" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Birthday"></label>
                    <input asp-for="Birthday" class="form-control input-lg" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telephone"></label>
                    <input asp-for="Telephone" class="form-control input-lg" />
                    <span asp-validation-for="Telephone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control input-lg" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control input-lg" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="text-danger" style="font-weight:bold; padding-bottom:4px;padding-top:4px;">
                    @ViewData["Message"]
                </div>
                <div class="form-group">
                    <button type="submit" asp-action="Save" class="btn btn-success btn-lg col-lg-6">Kaydet</button>
                    <button type="submit" asp-action="Cancel" class="btn btn-warning btn-lg col-lg-6">İptal</button>
                </div>
            </form>
        </section>
    </div>
</div>