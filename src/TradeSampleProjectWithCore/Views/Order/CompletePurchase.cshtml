@model IEnumerable<TradeSampleProjectWithCore.Models.ViewModelCart>
@{
    Layout = "_Template";
    ViewData["Title"] = "Siparişi Tamamla";
}

<div class="col-lg-12" style="padding:10px;">
    <div class="col-lg-9 table-bordered" style="padding:5px;">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfProduct)
                    </th>
                    <th>
                        Toplam
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfProduct)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                </tr>
                }
            </tbody>
        </table>

        <div>

        </div>
    </div>

    <div class="col-lg-2 col-lg-offset-1 table-bordered text-right" style="padding:5px;">
        <h3>Sipariş Özeti</h3>
        <h6>@Model.Count() ürün</h6>
        <h5>Ödenecek Tutar</h5>
        <h6>@Model.Sum(modelItem => modelItem.ProductUnitPrice * modelItem.NumberOfProduct) TL</h6>
        <a asp-action="Complete" class="btn btn-lg btn-success">Siparişi Onayla <span class="glyphicon glyphicon-triangle-right"></span></a>
    </div>

    <div>
        <a asp-action="Cancel" class="btn btn-lg btn-warning"><span class="glyphicon glyphicon-triangle-left"></span> Alışverişe Devam Et</a>
    </div>
</div>
